<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayoutId"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_16">
        <TextView
            android:id="@+id/textPincodeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pincode_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_64"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/grey_50"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pinTextInputLayoutId"
            android:theme="@style/InputTextStyle"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_64"
            android:hint="@string/pincode_hint"
            android:textColorHint="@color/grey_50"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/grey_50"
            android:layout_height="wrap_content"
            android:layout_below="@id/textPincodeId">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"

                android:minWidth="150dp"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/pincodeAuthButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pinTextInputLayoutId"
            android:text="@string/auth_button_label"/>
    </RelativeLayout>
</ScrollView>